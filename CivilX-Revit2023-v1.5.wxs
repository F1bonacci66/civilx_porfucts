<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" 
           Name="CivilX Revit 2023 Plugin" 
           Language="1033" 
           Version="1.5.0.0" 
           Manufacturer="CivilX" 
           UpgradeCode="PUT-GUID-HERE">

    <Package InstallerVersion="200" 
             Compressed="yes" 
             InstallScope="perMachine" 
             Description="CivilX Revit 2023 Plugin Installer" />

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    <MediaTemplate EmbedCab="yes" />

    <Feature Id="ProductFeature" Title="CivilX Revit 2023 Plugin" Level="1">
      <ComponentGroupRef Id="ProductComponents" />
    </Feature>

    <UI>
      <UIRef Id="WixUI_InstallDir" />
      <Publish Dialog="WelcomeDlg" Control="Next" Event="NewDialog" Value="InstallDirDlg" Order="2">1</Publish>
      <Publish Dialog="InstallDirDlg" Control="Back" Event="NewDialog" Value="WelcomeDlg" Order="2">1</Publish>
    </UI>

    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER" />

    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder">
        <Directory Id="INSTALLFOLDER" Name="CivilX">
          <Directory Id="CivilXExportFolder" Name="CivilX_export" />
        </Directory>
      </Directory>
    </Directory>

    <ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
      <!-- Main .addin file -->
      <Component Id="CivilXAddin" Guid="*">
        <File Id="CivilXAddinFile" 
              Source="C:\Проекты\CivilX Сайт\Продукты\CivilX\CivilX.addin" 
              KeyPath="yes" />
      </Component>

      <!-- DLL files in CivilX_export subfolder -->
      <Component Id="CivilXSharedDll" Directory="CivilXExportFolder" Guid="*">
        <File Id="CivilXSharedDllFile" 
              Source="C:\Проекты\CivilX Сайт\Продукты\CivilX\CivilX_export\CivilX.Shared.dll" 
              KeyPath="yes" />
      </Component>

      <Component Id="CivilXAuthPluginDll" Directory="CivilXExportFolder" Guid="*">
        <File Id="CivilXAuthPluginDllFile" 
              Source="C:\Проекты\CivilX Сайт\Продукты\CivilX\CivilX_export\CivilXAuthPlugin.dll" 
              KeyPath="yes" />
      </Component>

      <Component Id="RevitExporterAddinDll" Directory="CivilXExportFolder" Guid="*">
        <File Id="RevitExporterAddinDllFile" 
              Source="C:\Проекты\CivilX Сайт\Продукты\CivilX\CivilX_export\RevitExporterAddin.dll" 
              KeyPath="yes" />
      </Component>

      <!-- Icon files -->
      <Component Id="MainIcon" Directory="CivilXExportFolder" Guid="*">
        <File Id="MainIconFile" 
              Source="C:\Проекты\CivilX Сайт\Продукты\CivilX\CivilX_export\main_icon.jpg" 
              KeyPath="yes" />
      </Component>

      <Component Id="AuthIcon16" Directory="CivilXExportFolder" Guid="*">
        <File Id="AuthIcon16File" 
              Source="C:\Проекты\CivilX Сайт\Продукты\CivilX\CivilX_export\auth_16.png" 
              KeyPath="yes" />
      </Component>

      <Component Id="AuthIcon32" Directory="CivilXExportFolder" Guid="*">
        <File Id="AuthIcon32File" 
              Source="C:\Проекты\CivilX Сайт\Продукты\CivilX\CivilX_export\auth_32.png" 
              KeyPath="yes" />
      </Component>

      <Component Id="DataViewerIcon16" Directory="CivilXExportFolder" Guid="*">
        <File Id="DataViewerIcon16File" 
              Source="C:\Проекты\CivilX Сайт\Продукты\CivilX\CivilX_export\dataviewer_16.png" 
              KeyPath="yes" />
      </Component>

      <Component Id="DataViewerIcon32" Directory="CivilXExportFolder" Guid="*">
        <File Id="DataViewerIcon32File" 
              Source="C:\Проекты\CivilX Сайт\Продукты\CivilX\CivilX_export\dataviewer_32.png" 
              KeyPath="yes" />
      </Component>

      <!-- PDB files (optional, for debugging) -->
      <Component Id="CivilXSharedPdb" Directory="CivilXExportFolder" Guid="*">
        <File Id="CivilXSharedPdbFile" 
              Source="C:\Проекты\CivilX Сайт\Продукты\CivilX\CivilX_export\CivilX.Shared.pdb" 
              KeyPath="yes" />
      </Component>

      <Component Id="CivilXAuthPluginPdb" Directory="CivilXExportFolder" Guid="*">
        <File Id="CivilXAuthPluginPdbFile" 
              Source="C:\Проекты\CivilX Сайт\Продукты\CivilX\CivilX_export\CivilXAuthPlugin.pdb" 
              KeyPath="yes" />
      </Component>

      <Component Id="RevitExporterAddinPdb" Directory="CivilXExportFolder" Guid="*">
        <File Id="RevitExporterAddinPdbFile" 
              Source="C:\Проекты\CivilX Сайт\Продукты\CivilX\CivilX_export\RevitExporterAddin.pdb" 
              KeyPath="yes" />
      </Component>
    </ComponentGroup>
  </Product>
</Wix>
