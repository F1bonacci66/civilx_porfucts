<Window x:Class="CivilXAuthPlugin.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CivilX Auth Plugin v1.0" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="Black">
    
    <Grid>
        <!-- Экран авторизации -->
        <Grid x:Name="AuthScreen" Visibility="Visible">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#1a1a1a" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            
            <!-- Заголовок -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0">
                <TextBlock Text="CIVIL" 
                          FontSize="48" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20"/>
                <TextBlock Text="Auth Plugin" 
                          FontSize="24" 
                          Foreground="#14b8a6" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,40"/>
            </StackPanel>
            
            <!-- Контейнер авторизации -->
            <Border Background="#1F2937" 
                    BorderBrush="#374151" 
                    BorderThickness="1" 
                    Padding="40" 
                    Width="500" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                
                <StackPanel>
                    <!-- Вкладки авторизации -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button x:Name="LoginTabButton" 
                                Content="Вход" 
                                Grid.Column="0" 
                                Height="40" 
                                Background="#3B82F6" 
                                Foreground="White" 
                                BorderThickness="0" 
                                FontSize="16" 
                                FontWeight="SemiBold"
                                Click="LoginTabButton_Click"/>
                        
                        <Button x:Name="RegisterTabButton" 
                                Content="Регистрация" 
                                Grid.Column="1" 
                                Height="40" 
                                Background="#4B5563" 
                                Foreground="White" 
                                BorderThickness="0" 
                                FontSize="16" 
                                FontWeight="SemiBold"
                                Click="RegisterTabButton_Click"/>
                    </Grid>
                    
                    <!-- Форма входа -->
                    <StackPanel x:Name="LoginForm" Visibility="Visible">
                        <TextBox x:Name="LoginEmail" 
                                 Text="Email" 
                                 Foreground="#9CA3AF" 
                                 Background="#374151" 
                                 BorderBrush="#4B5563" 
                                 BorderThickness="1" 
                                 Padding="15" 
                                 FontSize="16" 
                                 Margin="0,0,0,20"
                                 GotFocus="TextBox_GotFocus"
                                 LostFocus="TextBox_LostFocus"/>
                        
                        <PasswordBox x:Name="LoginPassword" 
                                     Password="Пароль" 
                                     Foreground="#9CA3AF" 
                                     Background="#374151" 
                                     BorderBrush="#4B5563" 
                                     BorderThickness="1" 
                                     Padding="15" 
                                     FontSize="16" 
                                     Margin="0,0,0,30"
                                     GotFocus="PasswordBox_GotFocus"
                                     LostFocus="PasswordBox_LostFocus"/>
                        
                        <Button x:Name="LoginButton" 
                                Content="Войти" 
                                Height="50" 
                                Background="#10B981" 
                                Foreground="White" 
                                BorderThickness="0" 
                                FontSize="18" 
                                FontWeight="Bold"
                                Click="LoginButton_Click"/>
                    </StackPanel>
                    
                    <!-- Форма регистрации -->
                    <StackPanel x:Name="RegisterForm" Visibility="Collapsed">
                        <ComboBox x:Name="RegisterUserType" 
                                  SelectedIndex="0" 
                                  Foreground="#9CA3AF" 
                                  Background="#374151" 
                                  BorderBrush="#4B5563" 
                                  BorderThickness="1" 
                                  Padding="15" 
                                  FontSize="16" 
                                  Margin="0,0,0,20">
                            <ComboBoxItem Content="Пользователь"/>
                            <ComboBoxItem Content="Организация"/>
                        </ComboBox>
                        
                        <TextBox x:Name="RegisterUserName" 
                                 Text="Имя" 
                                 Foreground="#9CA3AF" 
                                 Background="#374151" 
                                 BorderBrush="#4B5563" 
                                 BorderThickness="1" 
                                 Padding="15" 
                                 FontSize="16" 
                                 Margin="0,0,0,20"
                                 GotFocus="TextBox_GotFocus"
                                 LostFocus="TextBox_LostFocus"/>
                        
                        <TextBox x:Name="RegisterLogin" 
                                 Text="Логин" 
                                 Foreground="#9CA3AF" 
                                 Background="#374151" 
                                 BorderBrush="#4B5563" 
                                 BorderThickness="1" 
                                 Padding="15" 
                                 FontSize="16" 
                                 Margin="0,0,0,20"
                                 GotFocus="TextBox_GotFocus"
                                 LostFocus="TextBox_LostFocus"/>
                        
                        <TextBox x:Name="RegisterEmail" 
                                 Text="Email" 
                                 Foreground="#9CA3AF" 
                                 Background="#374151" 
                                 BorderBrush="#4B5563" 
                                 BorderThickness="1" 
                                 Padding="15" 
                                 FontSize="16" 
                                 Margin="0,0,0,20"
                                 GotFocus="TextBox_GotFocus"
                                 LostFocus="TextBox_LostFocus"/>
                        
                        <PasswordBox x:Name="RegisterPassword" 
                                     Password="Пароль" 
                                     Foreground="#9CA3AF" 
                                     Background="#374151" 
                                     BorderBrush="#4B5563" 
                                     BorderThickness="1" 
                                     Padding="15" 
                                     FontSize="16" 
                                     Margin="0,0,0,20"
                                     GotFocus="PasswordBox_GotFocus"
                                     LostFocus="PasswordBox_LostFocus"/>
                        
                        <PasswordBox x:Name="RegisterPasswordConfirm" 
                                     Password="Подтвердите пароль" 
                                     Foreground="#9CA3AF" 
                                     Background="#374151" 
                                     BorderBrush="#4B5563" 
                                     BorderThickness="1" 
                                     Padding="15" 
                                     FontSize="16" 
                                     Margin="0,0,0,30"
                                     GotFocus="PasswordBox_GotFocus"
                                     LostFocus="PasswordBox_LostFocus"/>
                        
                        <Button x:Name="RegisterButton" 
                                Content="Зарегистрироваться" 
                                Height="50" 
                                Background="#10B981" 
                                Foreground="White" 
                                BorderThickness="0" 
                                FontSize="18" 
                                FontWeight="Bold"
                                Click="RegisterButton_Click"/>
                    </StackPanel>
                    
                    <!-- Сообщения об ошибках и успехе -->
                    <TextBlock x:Name="ErrorMessage" 
                               Foreground="#EF4444" 
                               FontSize="14" 
                               Margin="0,20,0,0" 
                               TextWrapping="Wrap" 
                               Visibility="Collapsed"/>
                    
                    <TextBlock x:Name="SuccessMessage" 
                               Foreground="#10B981" 
                               FontSize="14" 
                               Margin="0,20,0,0" 
                               TextWrapping="Wrap" 
                               Visibility="Collapsed"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Экран загрузки -->
        <Grid x:Name="LoadingScreen" Visibility="Collapsed">
            <Grid.Background>
                <SolidColorBrush Color="Black"/>
            </Grid.Background>
            
            <!-- Логотип и спиннер -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Логотип CivilX -->
                <Image x:Name="LogoImage"
                       Width="300" 
                       Height="300" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"
                       Stretch="Uniform"/>
                
                <!-- Спиннер загрузки как на сайте -->
                <Canvas Width="40" Height="40" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20">
                    <!-- Фоновый круг -->
                    <Ellipse Width="40" Height="40" 
                             Canvas.Left="0" Canvas.Top="0">
                        <Ellipse.Stroke>
                            <SolidColorBrush Color="#05FBE2" Opacity="0.3"/>
                        </Ellipse.Stroke>
                        <Ellipse.StrokeThickness>4</Ellipse.StrokeThickness>
                    </Ellipse>
                    <!-- Верхняя часть спиннера -->
                    <Path Data="M 20,0 A 20,20 0 0,1 20,40" 
                          Canvas.Left="0" Canvas.Top="0">
                        <Path.Stroke>
                            <SolidColorBrush Color="#05FBE2"/>
                        </Path.Stroke>
                        <Path.StrokeThickness>4</Path.StrokeThickness>
                        <Path.RenderTransform>
                            <RotateTransform x:Name="LoadingSpinner" CenterX="20" CenterY="20"/>
                        </Path.RenderTransform>
                    </Path>
                </Canvas>
                
                <TextBlock Text="Загрузка..." 
                          FontSize="16" 
                          Foreground="#9CA3AF" 
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
        
        <!-- Основной экран -->
        <Grid x:Name="MainScreen" Visibility="Collapsed">
            <Grid x:Name="MainGrid">
                <!-- Здесь будет отображаться профиль пользователя -->
            </Grid>
        </Grid>
    </Grid>
</Window>
