<UserControl x:Class="RevitExporterAddin.Views.TabContentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Заголовок -->
            <TextBlock Text="Результаты" 
                       FontSize="18" FontWeight="Bold" 
                       Margin="0,0,0,20"
                       Foreground="#212529"/>
            
            <!-- Настройки экспорта -->
            <Border Background="#FFFFFF" BorderBrush="#E9ECEF" BorderThickness="1" 
                    CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Настройки экспорта:" 
                               FontSize="16" FontWeight="SemiBold" 
                               Margin="0,0,0,15"
                               Foreground="#495057"/>
                    
                    <!-- Путь к папке с моделями -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="📁 Путь к папке с моделями:" 
                                   FontSize="14" Margin="0,0,15,0"
                                   Foreground="#6C757D"/>
                        <TextBlock Grid.Column="1" x:Name="ModelsPathText" 
                                   Text="Не выбран" 
                                   FontSize="14" 
                                   Foreground="#212529"
                                   TextWrapping="Wrap"/>
                        <Button Grid.Column="2" x:Name="BrowseModelsButton" 
                                Content="Обзор" Width="80" Height="30"
                                Click="BrowseModelsButton_Click"/>
                    </Grid>
                    
                    <!-- Посмотреть результат -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="📂 Папка результатов:" 
                                   FontSize="14" Margin="0,0,15,0"
                                   Foreground="#6C757D"/>
                        <TextBlock Grid.Column="1" x:Name="ResultsPathText" 
                                   Text="Папка для сохранения результатов" 
                                   FontSize="14" 
                                   Foreground="#212529"
                                   TextWrapping="Wrap"/>
                        <Button Grid.Column="2" x:Name="ViewResultsButton" 
                                Content="Посмотреть результат" Width="150" Height="30"
                                Click="ViewResultsButton_Click"/>
                    </Grid>
                    
                    <!-- Фильтр 1: Элементы модели -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="🔍 Элементы модели:" 
                                   FontSize="14" Margin="0,0,15,0"
                                   Foreground="#6C757D"/>
                        <TextBlock Grid.Column="1" x:Name="ModelElementsFiltersText" 
                                   Text="Выбрано: 0 из 0 категорий" 
                                   FontSize="14" 
                                   Foreground="#212529"
                                   TextWrapping="Wrap"/>
                        <Button Grid.Column="2" x:Name="ViewModelElementsFiltersButton" 
                                Content="Посмотреть" Width="100" Height="30"
                                Click="ViewModelElementsFiltersButton_Click"/>
                    </Grid>
                    
                    <!-- Фильтр 2: MEP системы -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="🔍 MEP системы:" 
                                   FontSize="14" Margin="0,0,15,0"
                                   Foreground="#6C757D"/>
                        <TextBlock Grid.Column="1" x:Name="MepSystemsFiltersText" 
                                   Text="Выбрано: 0 из 0 категорий" 
                                   FontSize="14" 
                                   Foreground="#212529"
                                   TextWrapping="Wrap"/>
                        <Button Grid.Column="2" x:Name="ViewMepSystemsFiltersButton" 
                                Content="Посмотреть" Width="100" Height="30"
                                Click="ViewMepSystemsFiltersButton_Click"/>
                    </Grid>
                    
                    <!-- Фильтр 3: Аналитика -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="🔍 Аналитика:" 
                                   FontSize="14" Margin="0,0,15,0"
                                   Foreground="#6C757D"/>
                        <TextBlock Grid.Column="1" x:Name="AnalyticsFiltersText" 
                                   Text="Выбрано: 0 из 0 категорий" 
                                   FontSize="14" 
                                   Foreground="#212529"
                                   TextWrapping="Wrap"/>
                        <Button Grid.Column="2" x:Name="ViewAnalyticsFiltersButton" 
                                Content="Посмотреть" Width="100" Height="30"
                                Click="ViewAnalyticsFiltersButton_Click"/>
                    </Grid>
                    
                    <!-- Фильтр 4: Аннотации -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="🔍 Аннотации:" 
                                   FontSize="14" Margin="0,0,15,0"
                                   Foreground="#6C757D"/>
                        <TextBlock Grid.Column="1" x:Name="AnnotationsFiltersText" 
                                   Text="Выбрано: 0 из 0 категорий" 
                                   FontSize="14" 
                                   Foreground="#212529"
                                   TextWrapping="Wrap"/>
                        <Button Grid.Column="2" x:Name="ViewAnnotationsFiltersButton" 
                                Content="Посмотреть" Width="100" Height="30"
                                Click="ViewAnnotationsFiltersButton_Click"/>
                    </Grid>
                    
                    <!-- Фильтр 5: Виды -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="🔍 Виды:" 
                                   FontSize="14" Margin="0,0,15,0"
                                   Foreground="#6C757D"/>
                        <TextBlock Grid.Column="1" x:Name="ViewsFiltersText" 
                                   Text="Выбрано: 0 из 0 категорий" 
                                   FontSize="14" 
                                   Foreground="#212529"
                                   TextWrapping="Wrap"/>
                        <Button Grid.Column="2" x:Name="ViewViewsFiltersButton" 
                                Content="Посмотреть" Width="100" Height="30"
                                Click="ViewViewsFiltersButton_Click"/>
                    </Grid>
                    
                    <!-- Фильтр 6: Данные -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="🔍 Данные:" 
                                   FontSize="14" Margin="0,0,15,0"
                                   Foreground="#6C757D"/>
                        <TextBlock Grid.Column="1" x:Name="DataFiltersText" 
                                   Text="Выбрано: 0 из 0 категорий" 
                                   FontSize="14" 
                                   Foreground="#212529"
                                   TextWrapping="Wrap"/>
                        <Button Grid.Column="2" x:Name="ViewDataFiltersButton" 
                                Content="Посмотреть" Width="100" Height="30"
                                Click="ViewDataFiltersButton_Click"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Блок логирования -->
            <Border Background="#F8F9FA" BorderBrush="#E9ECEF" BorderThickness="1" 
                    CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="📋 Лог загрузки элементов:" 
                               FontSize="16" FontWeight="SemiBold" 
                               Margin="0,0,0,15"
                               Foreground="#495057"/>
                    
                    <!-- Кнопки управления логом -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Button x:Name="ClearLogButton" Content="Очистить лог" 
                                Width="120" Height="30" Margin="0,0,10,0"
                                Click="ClearLogButton_Click"/>
                        <Button x:Name="SaveLogButton" Content="Сохранить лог" 
                                Width="120" Height="30" Margin="0,0,10,0"
                                Click="SaveLogButton_Click"/>
                        <TextBlock x:Name="LogStatusText" Text="Готов к работе" 
                                   FontSize="12" Foreground="#6C757D" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Область лога -->
                    <ScrollViewer x:Name="LogScrollViewer" Height="200" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto"
                                  Background="White" BorderBrush="#DEE2E6" BorderThickness="1">
                        <TextBlock x:Name="LogTextBlock" 
                                   FontFamily="Consolas" FontSize="11"
                                   Foreground="#212529" TextWrapping="Wrap"
                                   Padding="10"/>
                    </ScrollViewer>
                </StackPanel>
            </Border>
            
            <!-- Кнопка экспорта -->
            <Button x:Name="ExportButton" 
                    Content="🚀 Начать экспорт" 
                    Height="50" 
                    Background="#007BFF" 
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="16" FontWeight="Bold"
                    Click="ExportButton_Click"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>


