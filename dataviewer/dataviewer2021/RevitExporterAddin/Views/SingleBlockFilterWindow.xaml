<Window x:Class="RevitExporterAddin.Views.SingleBlockFilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор категорий для экспорта" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок с кнопками управления -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button x:Name="SelectAllBtn" Content="Выбрать все" Click="SelectAll_Click" Margin="0,0,10,0"/>
            <Button x:Name="DeselectAllBtn" Content="Снять все" Click="DeselectAll_Click"/>
        </StackPanel>

        <!-- Список категорий -->
        <ListBox Grid.Row="1" x:Name="CategoriesListBox" 
                 ItemsSource="{Binding Categories}"
                 Margin="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}" Margin="2"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Применить" IsDefault="True" Click="ApplyButton_Click" Width="100" Height="30" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="CancelButton_Click" Width="100" Height="30"/>
        </StackPanel>
    </Grid>
</Window>

