<Window x:Class="RevitExporterAddin.TestWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CustomViewer" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Левая панель - Список проектов -->
        <Border Grid.Column="0" Background="#FFFFFF" BorderBrush="#E9ECEF" BorderThickness="0,0,1,0">
            <StackPanel Margin="20">
                <!-- Заголовок -->
                <TextBlock Text="CustomViewer" 
                           FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30"
                           Foreground="#212529"/>
                
                <!-- Подзаголовок -->
                <TextBlock Text="Выберите проект:" 
                           FontSize="14" 
                           Margin="0,0,0,15"
                           Foreground="#6C757D"/>
                
                <!-- Список проектов -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="400">
                    <StackPanel x:Name="ProjectsList">
                        <!-- Проекты будут добавляться программно -->
                    </StackPanel>
                </ScrollViewer>
                
                <!-- Кнопка добавления проекта -->
                <Button x:Name="AddProjectButton" 
                        Content="➕ Добавить проект" 
                        Height="40" 
                        Margin="0,20,0,0"
                        Background="#007BFF" 
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        Click="AddProjectButton_Click"/>
            </StackPanel>
        </Border>
        
        <!-- Правая панель - Контент -->
        <Border Grid.Column="1" Background="#F8F9FA">
            <Grid x:Name="ContentArea">
                <!-- Здесь будет контент для проектов -->
            </Grid>
        </Border>
    </Grid>
</Window>
