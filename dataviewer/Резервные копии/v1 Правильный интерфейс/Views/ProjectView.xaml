<UserControl x:Class="RevitExporterAddin.Views.ProjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Левая панель - Список выгрузок -->
        <Border Grid.Column="0" Background="#FFFFFF" BorderBrush="#E9ECEF" BorderThickness="0,0,1,0">
            <StackPanel Margin="20">
                <!-- Заголовок и кнопка назад -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button x:Name="BackButton" Grid.Column="0" 
                            Content="←" FontSize="18" 
                            Width="40" Height="40"
                            Background="#6C757D" Foreground="White"
                            BorderThickness="0" Margin="0,0,15,0"
                            Click="BackButton_Click"/>
                    
                    <TextBlock Grid.Column="1" x:Name="ProjectTitleText" 
                               Text="Название проекта" 
                               FontSize="20" FontWeight="Bold" 
                               VerticalAlignment="Center"
                               Foreground="#212529"/>
                </Grid>
                
                <!-- Подзаголовок -->
                <TextBlock Text="Все выгрузки:" 
                           FontSize="14" 
                           Margin="0,0,0,15"
                           Foreground="#6C757D"/>
                
                <!-- Список выгрузок -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="400">
                    <StackPanel x:Name="ExportsList">
                        <!-- Выгрузки будут добавляться программно -->
                    </StackPanel>
                </ScrollViewer>
                
                <!-- Кнопка добавления выгрузки -->
                <Button x:Name="AddExportButton" 
                        Content="➕ Добавить выгрузку" 
                        Height="40" 
                        Margin="0,20,0,0"
                        Background="#007BFF" 
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        Click="AddExportButton_Click"/>
            </StackPanel>
        </Border>
        
        <!-- Правая панель - Контент выгрузки -->
        <Border Grid.Column="1" Background="#F8F9FA">
            <Grid x:Name="ExportContentArea">
                <!-- Здесь будет контент для выгрузок -->
            </Grid>
        </Border>
    </Grid>
</UserControl>

