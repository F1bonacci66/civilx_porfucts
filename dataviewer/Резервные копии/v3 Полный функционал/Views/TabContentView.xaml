<UserControl x:Class="RevitExporterAddin.Views.TabContentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Заголовок -->
            <TextBlock Text="Результаты" 
                       FontSize="18" FontWeight="Bold" 
                       Margin="0,0,0,20"
                       Foreground="#212529"/>
            
            <!-- Настройки экспорта -->
            <Border Background="#FFFFFF" BorderBrush="#E9ECEF" BorderThickness="1" 
                    CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Настройки экспорта:" 
                               FontSize="16" FontWeight="SemiBold" 
                               Margin="0,0,0,15"
                               Foreground="#495057"/>
                    
                    <!-- Путь к папке с моделями -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="📁 Путь к папке с моделями:" 
                                   FontSize="14" Margin="0,0,15,0"
                                   Foreground="#6C757D"/>
                        <TextBlock Grid.Column="1" x:Name="ModelsPathText" 
                                   Text="Не выбран" 
                                   FontSize="14" 
                                   Foreground="#212529"
                                   TextWrapping="Wrap"/>
                        <Button Grid.Column="2" x:Name="BrowseModelsButton" 
                                Content="Обзор" Width="80" Height="30"
                                Click="BrowseModelsButton_Click"/>
                    </Grid>
                    
                    <!-- Посмотреть результат -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="📂 Папка результатов:" 
                                   FontSize="14" Margin="0,0,15,0"
                                   Foreground="#6C757D"/>
                        <TextBlock Grid.Column="1" x:Name="ResultsPathText" 
                                   Text="Папка для сохранения результатов" 
                                   FontSize="14" 
                                   Foreground="#212529"
                                   TextWrapping="Wrap"/>
                        <Button Grid.Column="2" x:Name="ViewResultsButton" 
                                Content="Посмотреть результат" Width="150" Height="30"
                                Click="ViewResultsButton_Click"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Кнопка экспорта -->
            <Button x:Name="ExportButton" 
                    Content="🚀 Начать экспорт" 
                    Height="50" 
                    Background="#007BFF" 
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="16" FontWeight="Bold"
                    Click="ExportButton_Click"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>


