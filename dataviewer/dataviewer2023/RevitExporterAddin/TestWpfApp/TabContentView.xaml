<UserControl x:Class="RevitExporterAddin.TestWpfApp.TabContentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Заголовок -->
            <TextBlock Text="Результаты" 
                       FontSize="18" FontWeight="Bold" 
                       Margin="0,0,0,20"
                       Foreground="#212529"/>
            
            <!-- Информация о файлах -->
            <Border Background="#FFFFFF" BorderBrush="#E9ECEF" BorderThickness="1" 
                    CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Информация о файлах:" 
                               FontSize="16" FontWeight="SemiBold" 
                               Margin="0,0,0,15"
                               Foreground="#495057"/>
                    
                    <!-- Исходный файл -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="📁 Исходный файл:" 
                                   FontSize="14" Margin="0,0,15,0"
                                   Foreground="#6C757D"/>
                        <TextBlock Grid.Column="1" x:Name="SourceFileText" 
                                   Text="Путь к исходному файлу" 
                                   FontSize="14" 
                                   Foreground="#212529"
                                   TextWrapping="Wrap"/>
                        <Button Grid.Column="2" x:Name="BrowseSourceButton" 
                                Content="Обзор" Width="80" Height="30"
                                Click="BrowseSourceButton_Click"/>
                    </Grid>
                    
                    <!-- Путь сохранения -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="💾 Путь сохранения:" 
                                   FontSize="14" Margin="0,0,15,0"
                                   Foreground="#6C757D"/>
                        <TextBlock Grid.Column="1" x:Name="OutputPathText" 
                                   Text="Путь для сохранения результатов" 
                                   FontSize="14" 
                                   Foreground="#212529"
                                   TextWrapping="Wrap"/>
                        <Button Grid.Column="2" x:Name="BrowseOutputButton" 
                                Content="Обзор" Width="80" Height="30"
                                Click="BrowseOutputButton_Click"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Настройки выгрузки -->
            <Border Background="#FFFFFF" BorderBrush="#E9ECEF" BorderThickness="1" 
                    CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Настройки выгрузки:" 
                               FontSize="16" FontWeight="SemiBold" 
                               Margin="0,0,0,15"
                               Foreground="#495057"/>
                    
                    <!-- Модели -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="🏗️ Модели:" 
                                   FontSize="14" Margin="0,0,15,0"
                                   Foreground="#6C757D"/>
                        <TextBlock Grid.Column="1" Text="Все" 
                                   FontSize="14" 
                                   Foreground="#212529"/>
                    </Grid>
                    
                    <!-- Версия Revit -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="🔧 Версия Revit:" 
                                   FontSize="14" Margin="0,0,15,0"
                                   Foreground="#6C757D"/>
                        <TextBlock Grid.Column="1" Text="2023" 
                                   FontSize="14" 
                                   Foreground="#212529"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Кнопка экспорта -->
            <Button x:Name="ExportButton" 
                    Content="🚀 Начать экспорт" 
                    Height="50" 
                    Background="#007BFF" 
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="16" FontWeight="Bold"
                    Click="ExportButton_Click"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
